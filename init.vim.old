" Use spaces instead of tabs
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

set exrc " Run local vimrc file in directories
set relativenumber " Use relative numbers
set hidden " Keep files open
set clipboard+=unnamedplus

set incsearch " Highlight search while writing
set nohlsearch " Do not highlight search after enter set ignorecase
set smartcase " If a capital letter is used, use case-sensitive search

set scrolloff=8 " Automatically scroll to keep 8 lines in the bottom
" set autochdir " Always change current directory to the current file

" -------- Plugins --------
call plug#begin()
Plug 'nvim-lua/plenary.nvim'
Plug 'nvim-telescope/telescope.nvim'
Plug 'gruvbox-community/gruvbox'
Plug 'lervag/vimtex'
Plug 'preservim/nerdtree'
Plug 'vim-airline/vim-airline'
" Plug('neoclide/coc.nvim', {['branch'] = 'release'})
Plug 'jenterkin/vim-autosource'
Plug 'tpope/vim-dispatch'
call plug#end()

" -------- LaTeX options --------
let g:vimtex_view_method = 'zathura'

" -------- Color theme --------
colorscheme gruvbox
highlight Normal guibg=none

" -------- Keybinds / Remaps --------
let mapleader = " "

" Find files using Telescope command-line sugar.
nnoremap <leader>ff <cmd>Telescope find_files<cr>
nnoremap <leader>fg <cmd>Telescope live_grep<cr>
nnoremap <leader>fb <cmd>Telescope buffers<cr>
nnoremap <leader>fh <cmd>Telescope help_tags<cr>

nnoremap <leader>n :NERDTreeFocus<cr>
nnoremap <C-n> :NERDTree<cr>
nnoremap <leader>b :NERDTreeToggle<cr>
nnoremap <C-f> :NERDTreefind<cr>

" -------- Autocommands --------
fun! TrimWhitespace()
    let l:save = winsaveview()
    keeppatterns %s/\s\+$//e
    call winrestview(l:save)
endfun

augroup autocommands
    autocmd!
    autocmd BufWritePre * :call TrimWhitespace()
augroup END

" -------- Windows-only commands --------
if has("win32")
    "set shellslash
    set shell=cmd.exe
endif
